generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Claim {
  id                  String   @id @default(uuid())
  state               String
  district            String
  village             String
  tribalGroup         String
  individualRights    Int      @default(0)
  communityRights     Int      @default(0)
  forestResources     Int      @default(0)
  totalArea           String?
  households          Int      @default(0)
  approvedCount       Int      @default(0)
  pendingCount        Int      @default(0)
  underReviewCount    Int      @default(0)
  rejectedCount       Int      @default(0)
  titleDistributedCount Int    @default(0)
  approvalRate        String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([state, district, village])
}

model Boundary {
  id          String   @id @default(uuid())
  state       String
  district    String
  village     String?
  tribalGroup String?
  boundaryType String  // 'state', 'district', 'village', 'tribal'
  geojson     Json     // Storing GeoJSON as JSONB
  center      Json?    // Storing center point {lat, lng}
  bbox        Json?    // Storing bounding box
  createdAt   DateTime @default(now())
  
  @@index([state, district, village])
}
